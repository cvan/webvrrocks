{
  "name": "webvrrocks",
  "version": "1.0.0",
  "private": "true",
  "description": "WebVR Rocks",
  "main": "dev.js",
  "scripts": {
    "start": "parallelshell 'npm run dev' 'npm run tasks'",
    "dev": "node ./dev.js public/media/js/main.js:_prod/media/js/main.js --port 3000 --dir _prod --live --watch-glob='**/*.{html,css,svg,json}' --cors --verbose",
    "test": "npm run prod",
    "tasks": "NODE_ENV='production' node ./node_modules/webvrrocks-tasks/cron.js public/_db/",
    "build": "shx cp -R public _prod && node ./node_modules/.bin/nunjucks '**/*.html' --path public --unsafe --extensions $PWD/nunjucks-helpers.js --out _prod",
    "deploy": "surge _prod -d https://webvrrocks.surge.sh",
    "open": "opn 'http://webvrrocks.surge.sh'",
    "prebuild": "shx rm -rf _prod",
    "postbuild": "shx rm -rfv _prod/_db",
    "preprod": "npm run build",
    "pretest": "npm run build",
    "predeploy": "npm run build"
  },
  "dependencies": {
    "budo": "github:mattdesl/budo#feature/livereload-rework",
    "nunjucks-cli": "github:cvan/nunjucks-cli#214cea4",
    "nunjucks-includeData": "0.0.9",
    "shelljs": "^0.7.6",
    "shx": "^0.2.1",
    "yonder": "^0.2.0"
  },
  "devDependencies": {
    "budo": "github:mattdesl/budo#feature/livereload-rework",
    "opn": "^4.0.2",
    "parallelshell": "^2.0.0",
    "webvrrocks-tasks": "^1.0.3"
  },
  "engines": {
    "node": "6.9.1"
  },
  "repository": "webvrrocks/webvrrocks",
  "keywords": [
    "webvr",
    "webvrrocks"
  ]
}
