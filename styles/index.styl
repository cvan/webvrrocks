@import 'rocks-masthead.styl'

/*a*/.nav-toggle
  outline unset

/*span*/.nav-toggle-text
  @extend .hidden-text

/*ul*/.nav-pages
  // display block

/*li*/.nav-item-page a
  color color-white-soft
  display block
  font-size 1.2rem
  background red
  border 1px solid blue
  line-height 1.5
  font-weight 500
  padding 1rem 2rem
  text-decoration none

  &:hover
    opacity 1

  &:active,
  &.active
    @extend .nav-item-page-anchor-selected

.nav-footer
  padding 2rem
  transition .15s bottom ease-in-out
  text-align right
  width 100%

.nav-footer-item a
  color color-text
  display block
  font-size 1rem
  text-decoration none
  white-space nowrap
  &:hover
    color color-text-darker
    opacity 1

.nav-footer-item + .nav-footer-item a
  padding-top .5rem

.content
  background color-white
  padding 2rem
  position relative
  width 100%

.column
  margin 0 auto
  max-width column-max-width
  position relative

